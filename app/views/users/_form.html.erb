<%= render 'shared/errors', obj: @user %>

<%= form_for @user do |f| %>
  <div class="field">
    <%= f.label :username, class: 'label' %>
    <%= f.text_field :username, class: 'input' %>
  </div>
  <div class="field">
    <%= f.label :email, class: 'label' %>
    <%= f.email_field :email, class: 'input' %>
  </div>
  <div class="field">
    <%= f.label :password, class: 'label' %>
    <%= f.password_field :password, class: 'input' %>
  </div>
  <div class="control">
    <%= f.submit @user.new_record? ? 'Sign Up' : 'Update Account', class: 'button is-success' %>
  </div>
<% end %>
